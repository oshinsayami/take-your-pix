<h1><%= @album.title %></h1>
<p><%= @album.description %></p>
<p><%= clean_time(@album.date) %></p>
<p>Location: <%= @album.location %></p>
<p>Photographer: <%= link_to @photographer.username, photographer_path(@photographer) %></p>
<p>Client: <%= link_to @client.username, client_path(@client) %></p>
<p><%= link_to "Edit Album", edit_album_path(@album) %> | <%= link_to "Delete Album", album_path, method: :delete %></p>

<%= display_all_photos %>
<p><%= link_to "Add New Photo", new_album_photo_path(@album) %></p>
