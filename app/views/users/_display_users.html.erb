<div class="album-box">
  <% array.each do |user| %>
  <% unless user == logged_in? %>
    <div class="images">
      <% if user.albums.first.nil? || user.albums.first.photos.nil? %>
        <p><%= link_to image_tag(("default.jpg"), class: "thumbnail-img"), send("#{model.downcase}_path", user) %>
      <% else %>
        <p><%= link_to image_tag(url_for(user.albums.first.photos.first.image), class: "thumbnail-img"), send("#{model.downcase}_path", user) %> </p>
      <% end %>
      <p class="caption"><%= user.username%></p>
    </div>
  <% end %>
  <% end %>
</div>